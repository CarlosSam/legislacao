<h1>Lista de Projetos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Votos</th>
      <th>Título</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>Destinatário</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <ul class="vote-box__inline-list">
            <li><span class="total-votes"><%= project.netvotes %><span></li>
            <li><%= project.upvotes %><i class='fa fa-thumbs-o-up' aria-hidden='true'></i></li>
            <li><%= project.downvotes %><i class='fa fa-thumbs-o-down' aria-hidden='true'></i></li>
          </ul>
        </td>
        <td><%= project.name %></td>
        <td><%= project.city %></td>
        <td><%= project.state %></td>
        <td><%= project.recipient %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Associar políticos', {controller: 'projects', action: 'link_politicians', id: project.id}, class: 'btn btn-sm btn-default' %></td>
        <% else %>
          <td><%= link_to 'Mais detalhes', project, class: 'btn btn-sm btn-default' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
