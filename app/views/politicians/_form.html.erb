<%= form_for(@politician) do |f| %>
  <% if @politician.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@politician.errors.count, "error") %> impedi(u/ram) este político de ser alterado: </h2>

      <ul>
      <% @politician.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "nome" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "número" %><br>
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label "partido" %><br>
    <%= f.text_field :party %>
  </div>
  <div class="field">
    <%= f.label "email" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit 'enviar', class: "btn btn-primary" %>
  </div>
<% end %>
