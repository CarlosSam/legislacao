<h1>Listing Adm Politicians</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Party</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adm_politicians.each do |adm_politician| %>
      <tr>
        <td><%= adm_politician.name %></td>
        <td><%= adm_politician.number %></td>
        <td><%= adm_politician.party %></td>
        <td><%= adm_politician.email %></td>
        <td><%= link_to 'Show', adm_politician %></td>
        <td><%= link_to 'Edit', edit_adm_politician_path(adm_politician) %></td>
        <td><%= link_to 'Destroy', adm_politician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

