<h1>Lista de Políticos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Número</th>
      <th>Partido</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @adm_politicians.each do |adm_politician| %>
      <tr>
        <td><%= adm_politician.name %></td>
        <td><%= adm_politician.number %></td>
        <td><%= adm_politician.party %></td>
        <td><%= adm_politician.email %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to 'Detalhes', adm_politician, class: "btn btn-default btn-sm" %>
            <%= link_to 'Editar', edit_adm_politician_path(adm_politician), class: "btn btn-default btn-sm" %>
            <%= link_to 'Remover', adm_politician, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-default btn-sm" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Político', new_adm_politician_path, class: "btn btn-primary", style:"color:white;" %>

<%= javascript_include_tag 'adm/politicians', 'data-turbolinks-track' => true %>
